{% extends 'base.html.twig' %}
{% block title %}Liste des prix{% endblock %}

{% block body %}
    <h1>Liste des prix</h1>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Prix</th>
            <th>Date</th>
            <th>Produit</th>
        </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td>{{ price.id }}</td>
                <td>{{ price.price }}</td>
                <td>{{ price.timestamp|date('Y-m-d H:i:s') }}</td>
                <td>{{ price.product.name }}</td> {# Supposons que le champ "name" existe dans l'entit√© Product #}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <div class="navigation">
            {{ knp_pagination_render(prices, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
        </div>
    </nav>
{% endblock %}
